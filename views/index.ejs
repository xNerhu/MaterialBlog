    <script>
      function loadScripts (arr) {
        for (var i = 0; i < arr.length; i++) {
          var script = document.createElement('script');
          script.src = arr[i];
          document.body.appendChild(script);
        }
      }

      const isLocalHost = (window.location.href.includes('C:/') || window.location.href.includes('localhost'));
      if (isLocalHost) {
        loadScripts(['http://localhost:8080/build/app.bundle.js', 'http://localhost:8080/webpack-dev-server.js']);
      } else {
        loadScripts(['/app.bundle.js']);
      }
    </script>
